<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="border-top: 2px solid blue">
                <div class="card-content" style="margin: 15px 15px 15px 15px;">
                    <div class="row m-t-sm">
                        <div class="col-lg-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        <ul class="nav nav-tabs">
                                            <li class="active" ng-click="tab('tab1')" id="tab1" style="cursor:pointer;"><a data-toggle="tab" aria-expanded="false">Project Details</a></li>
                                            <li class="" ng-click="tab('tab2')" style="cursor:pointer;"><a data-toggle="tab" aria-expanded="true">Participants</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-content">
                            <div id="tab-1" style="display:block;">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="m-b-md">

                                            <h2 class="animated fadeIn" style="margin-left:50px; font-weight: 600;">New Project</h2>
                                        </div>

                                    </div>
                                </div>
                                <div class="animated fadeIn">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form class="form-horizontal">
                                                <div class="box-body">
                                                    <div class="form-group">
                                                        <label for="projectname" class="col-sm-2 control-label">Project Name:</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control" id="projectname" placeholder="" ng-model="data.title" required>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="Version" class="col-sm-2 control-label">Version:</label>
                                                        <div class="col-sm-5">
                                                            <input type="text" class="form-control" id="Version" placeholder="" ng-model="data.version" required>
                                                        </div>
                                                    </div>
                                                </div><!-- /.box-body -->
                                                <div class="box-footer">

                                                    <button class="btn btn-info pull-right" ng-click="create(data)">Create Project</button>
                                                </div><!-- /.box-footer -->
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="tab-2" style="display:none;">
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <div class="box">
                                                <div class="box-header" style="padding-top:38px;">

                                                    <div class="box-tools">
                                                        <div class="input-group" style="width: 250px;">
                                                            <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search" ng-model="search">
                                                            <div class="input-group-btn">
                                                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div><!-- /.box-header -->
                                                <div class="box-body table-responsive no-padding">
                                                    <table class="table table-hover" style="text-align:left;">
                                                        <tbody>
                                                            <tr>

                                                                <th style="width:50px;"><h4><strong>User</strong></h4></th>

                                                                <th> </th>
                                                                <th><h4><strong>Action</strong></h4></th>
                                                            </tr>
                                                            <tr class="animated fadeIn" ng-repeat="user in users | filter: search">
                                                                <td style="width: 20px;">
                                                                    <a href="#" class="pull-left">
                                                                        <img alt="image" class="img-circle" img src="{{user.profpath}}" style="width:38px;height:38px;">
                                                                    </a>
                                                                </td>
                                                                <td style="padding-top:16px;">{{user.firstname}} {{user.lastname}}</td>
                                                                <td>
                                                                    <p>
                                                                        <label>
                                                                            <input type="checkbox" class="checkParticipants" ng-init="checkbox(user.userId, $index)" style=" width: 18px; height: 18px;" ng-click="participants(user.userId)">
                                                                        </label>
                                                                    </p>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div><!-- /.box-body -->
                                            </div><!-- /.box -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
